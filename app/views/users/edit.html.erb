<h1>Change Admin Role</h1>

  <h2><%= @user.full_name %></h2>

<%= form_for @user do |f| %>
  <div class="form-group">
    <label>Do you want this user to be an admin?</label>
    <%= f.check_box :admin %>
  </div>
  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
