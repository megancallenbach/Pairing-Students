<% if @user.profile.nil? %>
  <h1><%= @user.email %></h1>
<% else %>
  <h1><%= @user.full_name %></h1>
<% end %>

<% if @user.admin? %>
<h2>This user is an admin.</h2>
<% else %>
<h2>This user is not an admin.</h2>
<% end %>

  <%= link_to "Change Admin Role", edit_user_path, class: "btn btn-large btn-default" %>
